@model IEnumerable<GestLab.Models.PedidoModel>

@{
    ViewData["Title"] = $"Relatorio {ViewBag.MesAno}";
}

<h1>Relatorio</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorLentes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArmacaoEntreguePeloCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentificacaoArmacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PossuiLentesEmEstoque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorLentes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArmacaoEntreguePeloCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentificacaoArmacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PossuiLentesEmEstoque)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

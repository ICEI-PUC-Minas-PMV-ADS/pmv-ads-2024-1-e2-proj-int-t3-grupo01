﻿@{
    ViewBag.Title = "Clientes";
}

@model List<ClienteModel>

<h2>@ViewBag.Title</h2>
<div class="row">

    <a href="@Url.Action("Detail", "Cliente", new { id = 0 })" class="btn btn-primary">
        Adicionar
    </a>

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Cnpj</th>
                    <th>Telefone</th>
                    <th>Cidade</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Cnpj</td>
                        <td>@cliente.Telefone</td>
                        <td>@cliente.Cidade</td>
                        <td>@Html.ActionLink("Editar", "Detail", new { id = cliente.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
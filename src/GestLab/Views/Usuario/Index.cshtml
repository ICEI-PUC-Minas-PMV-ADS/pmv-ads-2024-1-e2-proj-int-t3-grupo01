﻿@{
    ViewBag.Title = "Usuarios";
}

@model List<UsuarioModel>

<h2>@ViewBag.Title</h2>
<div class="row">

    <a href="@Url.Action("Detail", "Usuario", new { id = 0 })" class="btn btn-primary">
        Adicionar
    </a>

    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Tipo</th>
                    <th>Telefone</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.Tipo</td>
                        <td>@usuario.Telefone</td>
                        <td>@Html.ActionLink("Editar", "Detail", new { id = usuario.Id })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>